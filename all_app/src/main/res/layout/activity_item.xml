<?xml version="1.0" encoding="utf-8"?>
<com.example.all_app.DividerRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <ImageView
        android:id="@+id/item_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/item_label"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/item_logo"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#444"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_package"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/item_logo"
        android:singleLine="true"
        android:textSize="12sp" />
</com.example.all_app.DividerRelativeLayout>