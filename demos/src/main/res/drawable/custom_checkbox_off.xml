<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <!-- 高度40 -->
            <size
                android:width="@dimen/switch_width"
                android:height="@dimen/switch_height" />
            <!-- 圆角弧度 20 -->
            <corners android:radius="@dimen/switch_radius" />
            <!-- 变化率 -->
            <gradient
                android:endColor="#a7a7a7"
                android:startColor="#a7a7a7" />
        </shape>
    </item>
    <item android:gravity="left"
        android:width="@dimen/switch_height"
        android:height="@dimen/switch_height">
        <shape android:shape="rectangle">

            <!-- 高度40 -->
            <size
                android:width="@dimen/switch_height"
                android:height="@dimen/switch_height" />
            <!-- 圆角弧度 20 -->
            <corners android:radius="@dimen/switch_radius" />

            <!-- 变化率 -->
            <gradient
                android:endColor="#ffffff"
                android:startColor="#ffffff" />

            <stroke
                android:width="@dimen/switch_stroke_width"
                android:color="#a7a7a7" />

        </shape>
    </item>
</layer-list>